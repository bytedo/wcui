    }
  }
  .dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: #fff;
  }
}

:host([disabled]) {
  cursor: not-allowed;
  opacity: 0.6;
}

:host([size='large']) {
  label {
    width: 58px;
    height: 32px;
  }
  .dot {
    width: 26px;
    height: 26px;
  }
}
:host([size='medium']) {
  label {
    width: 50px;
